{% extends "layout.twig" %}
{% block content %}

	<header class="template-header">
		{% include "header.twig" %}
		<div class="header-feature">
			<div class="container">
				{{widget('responsiveslideshow', 'responsiveslideshow',
				{'duration':'3',
					'transSpeed': '1000',
					'transType': 'fade',
					'showButtons': true,
					'showBullets': true,
					'allowPause': false,
					'allowLoop': false,
					'showDescription': false,
					'showTitle': false,
					'crop': true,
					'images': [
						{'imageHeight':'auto', 'imageWidth':'100%', 'url':asset('/images/feature-bg.jpg'), 'title':'lorum ipsum',
						 'description': 'lorum ipsum'},
					]
				})|raw
			}}
			</div>
		</div>
	</header>

	<div class="container page-wrap">

		<section class="section main home-page">
			{{zone('main')|raw}}
		</section>

{% endblock %}